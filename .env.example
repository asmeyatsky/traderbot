# ============================================================================
# AI TRADING PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file with real credentials to version control

# ============================================================================
# MARKET DATA APIs
# ============================================================================
POLYGON_API_KEY=your_polygon_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
MARKETAUX_API_KEY=your_marketaux_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# ============================================================================
# BROKER CREDENTIALS
# ============================================================================
# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Interactive Brokers (Optional)
INTERACTIVE_BROKERS_API_KEY=your_ib_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL (Recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/traderbot

# SQLite (Development - default)
DATABASE_URL=sqlite:///./trading.db

# KeyDB Cache (Redis-compatible open source alternative)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# ML/AI MODEL CONFIGURATION
# ============================================================================
TF_SERVING_HOST=tf-serving
TF_SERVING_PORT=8501

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret Key - MUST be at least 32 characters, use strong random string
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_at_least_32_characters_long

JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins for API requests
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# OPTIONAL EMAIL CONFIGURATION
# ============================================================================
# Uncomment and configure for email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# AWS CONFIGURATION (Required for production deployment)
# ============================================================================
# AWS Secrets Manager - when set, secrets are loaded from AWS
# AWS_SECRETS_NAME=traderbot/production

# AWS Region for all services (ECR, ECS, Secrets Manager, etc.)
AWS_REGION=eu-west-2

# AWS S3 for models/backtest results (optional)
# AWS_S3_BUCKET=your-trading-bucket

# ============================================================================
# TRADING CONSTRAINTS
# ============================================================================
DEFAULT_MAX_POSITION_SIZE_PERCENT=5
DEFAULT_DAILY_LOSS_LIMIT=1000
DEFAULT_WEEKLY_LOSS_LIMIT=5000
DEFAULT_MONTHLY_LOSS_LIMIT=10000

# ============================================================================
# RISK MANAGEMENT (all have sensible defaults)
# ============================================================================
# Conservative profile
# RISK_CONSERVATIVE_MAX_DRAWDOWN=10.0
# RISK_CONSERVATIVE_POSITION_LIMIT_PCT=5.0
# RISK_CONSERVATIVE_VOLATILITY_THRESHOLD=2.0

# Moderate profile
# RISK_MODERATE_MAX_DRAWDOWN=15.0
# RISK_MODERATE_POSITION_LIMIT_PCT=10.0
# RISK_MODERATE_VOLATILITY_THRESHOLD=2.5

# Aggressive profile
# RISK_AGGRESSIVE_MAX_DRAWDOWN=25.0
# RISK_AGGRESSIVE_POSITION_LIMIT_PCT=20.0
# RISK_AGGRESSIVE_VOLATILITY_THRESHOLD=3.0

# Circuit breaker
# CIRCUIT_BREAKER_VOLATILITY_THRESHOLD=5.0
# CIRCUIT_BREAKER_RESET_MINUTES=30

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Enable debug mode (MUST be False in production)
DEBUG=False

# Enable verbose SQL logging
SQL_ECHO=False